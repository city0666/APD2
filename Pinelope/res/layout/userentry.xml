<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<ImageView android:id="@+id/imageView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/pinelope"
		android:layout_gravity="center" android:padding="10dp" />
	<TextView android:layout_width="290dp"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:textColor="#f17945"
		android:text="Welcome to Pinelope, your personal shopping assistant. Pinelope will help you find the perfect gift for your friends via Pinterest."
		android:paddingBottom="10dp" />
	<TextView android:layout_width="290dp"
	    android:layout_height="wrap_content" android:layout_gravity="center"
	    android:textColor="#5DB8A7"
	    android:text="Please create an account using your Pinteret Username!"
	    android:paddingBottom="10dp" />
	<LinearLayout android:layout_gravity="center"
		android:layout_width="290dp" android:layout_height="wrap_content"
		android:orientation="vertical" android:background="@drawable/border"
		android:padding="10dp">
		<LinearLayout android:layout_gravity="center"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:padding="10dp">
			<EditText android:id="@+id/pinuser" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:hint="Pinterest Username" />
			<EditText android:id="@+id/userpass" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:hint="Password" />
		</LinearLayout>
		<LinearLayout android:layout_gravity="center"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:padding="10dp">
			<Button android:id="@+id/pinusergo" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Login"
				android:textColor="#ffffff" android:background="@drawable/custom_button"
				android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_gravity="center"
		android:layout_width="290dp" android:layout_height="wrap_content"
		android:orientation="vertical" android:padding="10dp">
		<LinearLayout android:layout_gravity="center"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:padding="10dp">

			<Button android:id="@+id/pinsignup" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Sign Up"
				android:textColor="#ffffff" android:background="@drawable/custom_button_2"
				android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
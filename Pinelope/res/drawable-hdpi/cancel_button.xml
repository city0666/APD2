<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#bbbbbb"
                android:startColor="#cecece"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#cecece"
                android:startColor="#e3e3e3"
                android:angle="270" />
             
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#cecece"
                android:startColor="#e3e3e3"
                android:angle="270" />
             
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>        
    </item>
</selector>